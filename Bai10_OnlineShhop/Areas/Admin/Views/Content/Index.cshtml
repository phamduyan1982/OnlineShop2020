@model  PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản lý tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header {
    Danh sách tin tức
}
@section jsFooter {

}

<div class="row">
    <div class="col-lg-12">
        <!-- Begin Page Content -->
        <div class="container-fluid">
            @using (Html.BeginForm("Index", "Content", FormMethod.Get))
            {               
                <div class="row">
                    <div class="col-xs-6 col-sm-9">
                        <input type="text" value="@ViewBag.searchString" class="form-control" name="searchString" />
                    </div>
                    <div class="col-xs-6 col-sm-3">
                        <button type="submit" class="btn-success"> Tìm kiếm</button>
                        <a class="btn-primary" href="/Admin/Content/Create"> Thêm mới</a>
                    </div>
                </div>
            }
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tiêu đề</th>
                                    <th>Hình ảnh</th>
                                    <th>Ngày đăng</th>
                                    <th>Trạng thái</th>
                                    <th>#</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">

                                        <td>@item.Name</td>
                                        <td>@item.Image</td>
                                        <td>@item.CreatedDate</td>
                                        <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kích hoạt" : "Khóa")</a></td>

                                        <td>
                                            <a href="/Admin/Content/Edit/@item.ID">Sửa</a>
                                            ||
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xóa bản ghi này không?",
                                           OnComplete = "$('#row_" + @item.ID + "').remove()",
                                           HttpMethod = "Delete"
                                       })

                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->
    </div>

</div>

