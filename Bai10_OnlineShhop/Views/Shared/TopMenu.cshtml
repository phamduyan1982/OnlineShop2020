@model List<Model.EF.Menu>
@using Bai10_OnlineShhop.Common
<div class="call">
    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
</div>
<div class="account_desc">
    @{
        var session = (UserLogin)Session[Bai10_OnlineShhop.Common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>
            <li>Xin chào @session.UserName</li>
            <li>@Html.ActionLink("Thoát nhé","Logout","User")</li>
        </ul>
    }


</div>
<div class="clear"></div>
